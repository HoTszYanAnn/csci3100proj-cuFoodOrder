extends layout

block content
  h1 #{title}

  form(method='POST' action='')
    div.form-group
      label(for='name') Customer:
      input#name.form-control(type='text', placeholder='Your name...' name='name' value=(undefined===customer ? '' : customer.name))
      label(for='username') Username:
      input#username.form-control(type='text', placeholder='Your username...' name='username' value=(undefined===customer ? '' : customer.username))
      label(for='password') Password:
      input#password.form-control(type='text', placeholder='Your password...' name='password' value=(undefined===customer ? '' : customer.password))
      label(for='address') Address:
      input#address.form-control(type='text', placeholder='Your address...' name='address' value=(undefined===customer ? '' : customer.address))
      label(for='mobile') Mobile:
      input#mobile.form-control(type='text', placeholder='Your mobile...' name='mobile' value=(undefined===customer ? '' : customer.mobile))
      label(for='emailAddress') EmailAddress:
      input#emailAddress.form-control(type='text', placeholder='Your emailAddress...' name='emailAddress' value=(undefined===customer ? '' : customer.emailAddress))
      label(for='paymentInfo') PaymentInfo:
      input#paymentInfo.form-control(type='text', placeholder='Your paymentInfo...' name='paymentInfo' value=(undefined===customer ? '' : customer.paymentInfo))
    button.btn.btn-primary(type='submit') Submit

  if errors 
    ul
      for error in errors
        li!= error.msg